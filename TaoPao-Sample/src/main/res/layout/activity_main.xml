<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context="com.taopao.rxjavaretrofitcutmvp.ui.activity.MainActivity">

    <include layout="@layout/toolbar_base"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"></include>


    <RelativeLayout
        android:id="@+id/rl_netstate"
        android:visibility="gone"
        android:background="#EEE685"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="@android:color/holo_red_dark"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:text="网络不给力,请检查网络设置."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <Button
        android:text="CutMvp"
        android:onClick="mvp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="downloadapk"
        android:layout_width="match_parent"
        android:text="DownLoadApk"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="random"
        android:layout_width="match_parent"
        android:text="随机显示textview"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="dialog"
        android:layout_width="match_parent"
        android:text="Dialog"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="fr"
        android:layout_width="match_parent"
        android:text="仿微信朋友圈下拉刷新"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="weixinweb"
        android:layout_width="match_parent"
        android:text="仿微信带进度条的网页"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="mmersive"
        android:layout_width="match_parent"
        android:text="沉浸式"
        android:layout_height="wrap_content" />
</LinearLayout>
